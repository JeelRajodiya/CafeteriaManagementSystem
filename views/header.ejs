<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />


  <style>
    /* Cafeteria or Coffee theme with darker brown background */
    body {
      background-color: #1c0f07 !important;
      /* Darker brown */
      color: #d4af37 !important;
      /* Faint gold */
    }

    tr>* {
      color: #d4af37 !important;
      /* Faint gold */
    }

    .navbar {
      background-color: #1c0f07;
      /* Darker brown */
    }

    div>input {
      background-color: #120801 !important;
      /* Darker brown */
      border: 1px solid #d4af3755 !important;
      /* Faint gold */
      border-radius: 12px !important;
      color: #d4af37 !important;
      /* Faint gold */
    }

    div>.card {
      background-color: #120801 !important;
      color: #d4af37 !important;
      /* Faint gold */
    }

    .navbar-dark .navbar-brand,
    .navbar-dark .navbar-nav .nav-link {
      color: #d4af37;
      /* Faint gold */
    }

    .navbar-dark .navbar-toggler-icon {
      background-image: url("data:image/svg+xml,%3csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3e%3cpath stroke='%23d4af37' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
    }

    .navbar-dark .navbar-nav .nav-link.active {
      color: #d4af37;
      /* Faint gold */
    }

    .navbar-dark .navbar-nav .nav-link {
      color: rgba(212, 175, 55, 0.5);
      /* Faint gold */
    }

    .navbar-dark .navbar-toggler {
      border-color: rgba(212, 175, 55, 0.1);
      /* Faint gold */
    }

    .navbar-dark .navbar-toggler:focus,
    .navbar-dark .navbar-toggler:hover {
      background-color: rgba(212, 175, 55, 0.1);
      /* Faint gold */
    }
  </style>

</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #120801;">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
    <img src="./favicon.ico" height="32px" width="32px" alt="Cafeteria Management System" />
</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mt-1">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/caterer">Caterer</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/analytics">Analytics</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/customer">Customer</a>
          </li>
          <!-- <li class="nav-item">
            <a class="nav-link" href="/customer">Your Orders</a>
          </li> -->
        </ul>
      </div>
    </div>
  </nav>

  <!-- Modal -->
  <div class="modal fade" id="showErr" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Error!</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= error %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
        </div>
      </div>
    </div>
  </div>
</body>

</html>